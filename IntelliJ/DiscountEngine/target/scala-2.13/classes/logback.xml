<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>src/main/resources/rules_engine.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} - [%level] : %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="FILE" />
    </root>

</configuration>